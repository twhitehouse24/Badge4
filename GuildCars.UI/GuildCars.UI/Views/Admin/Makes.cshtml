

@{
    ViewBag.Title = "Makes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Makes</h2>

<div class="container">
    <div class="col-lg-12 fields">
        @using (Html.BeginForm("Makes", "Admin", FormMethod.Post))
        {

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <p>@ViewBag.ErrorMessage</p>
            <div class="form-group col-md-5">
                <label for="new-make" class="col-md-4 control-label">New Make:</label>
                <input type="text" id="NewMake" name="NewMake" />




            </div>
            <div class="col-md-4">
                <button class="button1">Save</button>
            </div>
        }
    </div>

    <div id="TableDiv" class="col-md-6">
        <table id="makeTable" class="table">
            <tr>
                <th width="20%">Make</th>
                <th width="40%">Date Added</th>
                <th width="40%">User</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MakeName</td>
                    <td>@item.DateAdded</td>
                    <td>@item.UpdatedBy</td>

                </tr>
            }
        </table>
    </div>
</div>