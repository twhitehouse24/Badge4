@model GuildCars.UI.Models.AddVehicleViewModel

@{
    ViewBag.Title = "AddVehicle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    label {
        width: 240px;
        display: inline-block;
    }

    input {
        float: left;
    }
</style>

<body>
    <h2>AddVehicle</h2>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="container">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="CarMakeid">Make</label>
                    @Html.DropDownListFor(model => model.MakeId, Model.Makes, "", new { onchange = "ModelLookup(this.value)", @class = "form-control", tabindex = 1 })
                    @Html.ValidationMessageFor(model => model.MakeId, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="CarType">Type</label>
                    @{
                        var selectListType = new SelectList(new List<SelectListItem>
                                                                {
                                                                new SelectListItem{Text="New", Value="1" , Selected = true},
                                                                new SelectListItem{Text="Used", Value="2"},
                                                                }, "Value", "Text");
                    }

                    @Html.DropDownListFor(model => model.CarType, selectListType, "", new { @class = "form-control", tabindex = 3 })
                    @Html.ValidationMessageFor(model => model.CarType, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="CarYr">Year</label>
                    @Html.DropDownListFor(model => model.CarYr, Model.Years, "", new { @class = "form-control", tabindex = 7 })
                    @Html.ValidationMessageFor(model => model.CarYr, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="ExtColor">Color</label>
                    @Html.DropDownListFor(model => model.ExtColor, Model.ExteriorColors, "", new { @class = "form-control", tabindex = 7 })
                    @Html.ValidationMessageFor(model => model.ExtColor, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="CarMileage">Mileage</label>
                    @Html.TextBoxFor(model => model.CarMileage, new { @class = "form-control", tabindex = 9 })
                    <br />@Html.ValidationMessageFor(model => model.CarMileage, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="MSRP">MSRP</label>
                    @Html.TextBoxFor(model => model.MSRP, new { @class = "form-control", tabindex = 11 })
                    <br />@Html.ValidationMessageFor(model => model.MSRP, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="CarDescription" style="padding:  10px 0px 0px 0px">Description</label>
                    @Html.TextAreaFor(model => model.CarDescription, new { @class = "form-control", tabindex = 13 })
                    @Html.ValidationMessageFor(model => model.CarDescription, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="CarImageName">Picture</label>
                    @Html.TextBoxFor(model => model.CarImageName, new { type = "file", @class = "form-control", tabindex = 14 })
                    <br />@Html.ValidationMessageFor(model => model.CarImageName, "", new { @class = "text-danger" })


                </div>
                <br /><br />
                <input type="submit" value="Save" class="btn btn-default" , tabindex=15 />

            </div>
            <div class="container">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="CarModelid">Model</label>
                        @Html.DropDownListFor(model => model.ModelId, new SelectList(" "), "", new { @class = "form-control", tabindex = 2 })
                        @Html.ValidationMessageFor(model => model.ModelId, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="CarBodyStle">Body Style</label>
                        @Html.DropDownListFor(model => model.BodyStyle, Model.BodyStyles, "", new { @class = "form-control", tabindex = 4 })
                        @Html.ValidationMessageFor(model => model.BodyStyle, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="CarTrans">Transmission</label>
                        @{
                            var selectListTrans = new SelectList(new List<SelectListItem>
                                            {
                                            new SelectListItem{Text="Automatic", Value="1" , Selected = true},
                                            new SelectListItem{Text="Manual", Value="2"},
                                            }, "Value", "Text");
                        }
                        @Html.DropDownListFor(model => model.CarTrans, selectListTrans, "", new { @class = "form-control", tabindex = 6 })
                        @Html.ValidationMessageFor(model => model.CarTrans, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="IntColor">Interior</label>
                        @Html.DropDownListFor(model => model.IntColor, Model.ExteriorColors, "", new { @class = "form-control", tabindex = 8 })
                        @Html.ValidationMessageFor(model => model.IntColor, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="Vin">VIN #</label>
                        @Html.TextBoxFor(model => model.VIN, new { @class = "form-control", tabindex = 10 }) <a href="~/Scripts/VINS.txt">Sample VINS</a>
                        <br />@Html.ValidationMessageFor(model => model.VIN, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="SalePrice">Sale Price</label>
                        @Html.TextBoxFor(model => model.SalePrice, new { @class = "form-control", tabindex = 12 })
                        <br />@Html.ValidationMessageFor(model => model.SalePrice, "", new { @class = "text-danger" })

                    </div>
                </div>
            </div>
        </div>
    }

</body>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/ModelLookup.js"></script>

