@model GuildCars.UI.Models.EditVehicleViewModel
@{
    ViewBag.Title = "EditVehicle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    label {
        width: 240px;
        display: inline-block;
    }

    input {
        float: left;
    }

    btn {
        width: 30px;
    }
</style>
<h2>Edit Vehicle</h2>

@using (Html.BeginForm("EditVehicle", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()



    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.cars.CarId)
    @Html.HiddenFor(model => model.cars.CarPhoto)


    <div class="container">
        <div class="col-md-5">
            <div class="form-group">
                @Html.LabelFor(model => model.cars.MakeId, "Make", htmlAttributes: new { @class = "control-label" })
                @Html.DropDownListFor(model => model.cars.MakeId, Model.Makes, "", new { @class = "form-control" })
                <br />@Html.ValidationMessageFor(model => model.cars.MakeId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                @Html.LabelFor(model => model.cars.ModelId, "Model", htmlAttributes: new { @class = "control-label" })
                @Html.DropDownListFor(model => model.cars.ModelId, Model.Models, "", new { @class = "form-control" })
                <br />@Html.ValidationMessageFor(model => model.cars.ModelId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                @Html.LabelFor(model => model.cars.CarType, "Type", htmlAttributes: new { @class = "control-label" })
                @{
                    var selectListType = new SelectList(new List<SelectListItem>
                                            {
                                            new SelectListItem{Text="New", Value="1" , Selected = true},
                                            new SelectListItem{Text="Used", Value="2"},
                                            }, "Value", "Text");
                }
                @Html.DropDownListFor(model => model.cars.CarType, selectListType, "", new { @class = "form-control" })
                <br />@Html.ValidationMessageFor(model => model.cars.CarType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-5">
            <div class="form-group">
                @Html.LabelFor(model => model.cars.BodyStyle, "Body Style", htmlAttributes: new { @class = "control-label" })
                @Html.DropDownListFor(model => model.cars.BodyStyle, Model.BodyStyles, "", new { @class = "form-control" })
                <br />@Html.ValidationMessageFor(model => model.cars.BodyStyle, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                @Html.LabelFor(model => model.cars.CarYr, "Year", htmlAttributes: new { @class = "control-label" })
                @Html.DropDownListFor(model => model.cars.CarYr, Model.Years, "", new { @class = "form-control" })
                <br />@Html.ValidationMessageFor(model => model.cars.CarYr, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                @Html.LabelFor(model => model.cars.CarTrans, "Transmission", htmlAttributes: new { @class = "control-label" })
                @{
                    var selectListTrans = new SelectList(new List<SelectListItem>
                                                            {
                                                            new SelectListItem{Text="Automatic", Value="1" , Selected = true},
                                                            new SelectListItem{Text="Manual", Value="2"},
                                                            }, "Value", "Text");
                }
                @Html.DropDownListFor(model => model.cars.CarTrans, selectListTrans, "", new { @class = "form-control", tabindex = 6 })
                <br />@Html.ValidationMessageFor(model => model.cars.CarTrans, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                @Html.LabelFor(model => model.cars.ExtColor, "Color", htmlAttributes: new { @class = "control-label" })
                @Html.DropDownListFor(model => model.cars.ExtColor, Model.ExteriorColors, "", new { @class = "form-control" })
                <br />@Html.ValidationMessageFor(model => model.cars.ExtColor, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                @Html.LabelFor(model => model.cars.IntColor, "Interior", htmlAttributes: new { @class = "control-label" })
                @Html.DropDownListFor(model => model.cars.IntColor, Model.InteriorColors, "", new { @class = "form-control" })
                <br />@Html.ValidationMessageFor(model => model.cars.IntColor, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                @Html.LabelFor(model => model.cars.CarMileage, "Mileage", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.cars.CarMileage, new { htmlAttributes = new { @class = "form-control" } })
                <br />@Html.ValidationMessageFor(model => model.cars.CarMileage, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                @Html.LabelFor(model => model.cars.VIN, "VIN", htmlAttributes: new { @class = "control-label" }) 
                @Html.EditorFor(model => model.cars.VIN, new { htmlAttributes = new { @class = "form-control" } })<a href="~/Scripts/VINS.txt">Sample VINS</a>
                <br />@Html.ValidationMessageFor(model => model.cars.VIN, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-5">
            <div class="form-group">
                @Html.LabelFor(model => model.cars.MSRP, "MSRP", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.cars.MSRP, new { htmlAttributes = new { @class = "form-control" } })
                <br />@Html.ValidationMessageFor(model => model.cars.MSRP, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                @Html.LabelFor(model => model.cars.SalePrice, "Sale Price", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.cars.SalePrice, new { htmlAttributes = new { @class = "form-control"} })
                <br />@Html.ValidationMessageFor(model => model.cars.SalePrice, "", new { @class = "text-danger" })
            </div>
        </div>

        <div>
            <div class="col-md-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.cars.CarDescription, "Description", htmlAttributes: new { @class = "control-label" })
                    @Html.TextAreaFor(model => model.cars.CarDescription, new { @class = "form-control", style = "width:60%; height: 100px" })
                    <br />@Html.ValidationMessageFor(model => model.cars.CarDescription, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <img src="@Model.cars.CarPhoto" style="width:175px;height:100px;" />
                </div>
            </div>


            <div class="col-md-12">
                <div class="form-group">
                    <input type="file"
                           id="postedFile" name="postedFile"
                           accept="image/png, image/jpeg, image/jpg">
                    

                </div>
            </div>
            <div class="col-md-12" style="margin-top:10px">
                <div class="form-group">
                    @Html.CheckBoxFor(model => model.cars.IsFeatured) <span style="margin-left:5px"> Feature this vehicle</span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="col-md-5">
                    <div class="form-group">
                        <input type="button" title="Delete" value="DELETE" style="height: 30px; width:75px; margin-right: 10px; margin-top:10px; background-color:red; color: white" onclick="location.href = '@Url.Action("DeleteVehicle", "Admin", new { sid = @Model.cars.CarId })'" />
                        <input type="submit" value="Save" class="btn btn-default" style="height: 30px; width:75px; margin-top:10px" />
                    </div>
                </div>
            </div>


        </div>




    </div>
}
