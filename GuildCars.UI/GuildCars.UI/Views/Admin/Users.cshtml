
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Users</h2>
    @Html.ActionLink("Add a New User", "AddUser")
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Email</th>
                <th>Role</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <td>@u.LastName</td>
                    <td>@u.FirstName</td>
                    <td>@u.Email</td>
                    <td>@u.RoleName</td>
                    <td><a href="~/Admin/EditUser/@u.UserId">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

